<% provide(:title, "Home") %>
<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- <title>Blog Home - Start Bootstrap Template</title> -->

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/blog-home.css" rel="stylesheet">
    <link href="../assets/posts_index.css" rel="stylesheet">

  </head>

  <body>


    <!-- Page Content -->
    <div class="container">

      <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

          <h1 class="my-4">Fanquet
            <small>記事一覧</small>
          </h1>

          <%= @posts.each do |post| %>
          <!-- Blog Post -->
          <div class="card mb-4 ">
            <a class="nav-link" href="/posts/<%= post.slug %>" style="text-decoration:none; color:#000000;">
              <img class="card-img-top" src="/assets/<%= post.image_file_name %>" alt="Card image cap" height="300">
              <div class="card-body">
                <h1 class="card-title"><%= post.name %></h1>
                <p> <%= post.body %> </p>

                <!-- <a href= "/posts/<%= post.id %>" class="btn btn-primary">Read More &rarr;</a> -->
              </div>
              <div class="card-footer text-muted">
                  Posted <%= time_ago_in_words(post.created_at) %> ago

              </div>
            </a>
          </div>
          <% end %>




          <!-- Pagination -->
          <ul class="pagination justify-content-center mb-4">
            <li class="page-item">
              <a class="page-link" href="#">&larr; Older</a>
            </li>
            <li class="page-item disabled">
              <a class="page-link" href="#">Newer &rarr;</a>
            </li>
          </ul>

        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

          <!-- Search Widget -->
          <div class="card my-4">
            <h5 class="card-header"><span class="white">Search</span></h5>
            <div class="card-body">
              <div class="input-group">
                <!-- <input type="text" class="form-control" placeholder="Search for..."> -->
                <input type="text" class="form-control" placeholder="Coming Soon..">
                <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button"><span class="white">Go!</span></button>
                </span>
              </div>
            </div>
          </div>

          <!-- Categories Widget -->
          <div class="card my-4">
            <h5 class="card-header"><span class="white">Categories</span></h5>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <!-- <li>
                      <a href="#">Web Design</a>
                    </li>
                    <li>
                      <a href="#">HTML</a>
                    </li>
                    <li>
                      <a href="#">Freebies</a>
                    </li>
                  </ul>
                </div>
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <li>
                      <a href="#">JavaScript</a>
                    </li>
                    <li>
                      <a href="#">CSS</a>
                    </li>
                    <li>
                      <a href="#">Tutorials</a> -->
                      Coming Soon
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <!-- Side Widget -->
          <div class="card my-4">
            <h5 class="card-header"><span class="white">Side Widget</span></h5>
            <div class="card-body">
              <!-- You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers! -->
              Coming Soon
            </div>
          </div>

        </div>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->



    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

</html>
